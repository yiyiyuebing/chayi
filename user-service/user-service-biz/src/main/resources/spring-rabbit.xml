<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:rabbit="http://www.springframework.org/schema/rabbit"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/rabbit
		http://www.springframework.org/schema/rabbit/spring-rabbit-1.3.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:property-placeholder location="classpath*:jdbc-mysql.properties" />
	<rabbit:connection-factory id="connectionFactory"
		host="${rabbit.host}" port="${rabbit.port}" username="${rabbit.username}"
		password="${rabbit.password}" />
	<rabbit:admin connection-factory="connectionFactory" id="amqpAdmin" />

	<rabbit:queue id="${rabbit.queueMqTask}" durable="true"
		auto-delete="false" exclusive="false" name="${rabbit.queueMqTask}">
		<rabbit:queue-arguments>
			<entry key="x-message-ttl">
				<value type="java.lang.Long">60000</value>
			</entry>
		</rabbit:queue-arguments>
	</rabbit:queue>

	<!-- 队列和key的映射 -->
	<rabbit:direct-exchange name="sgExchage"
		durable="true" auto-delete="false" id="sgExchage">
		<rabbit:bindings>
			<rabbit:binding queue="${rabbit.queueMqTask}"
				key="${rabbit.keyMqTask}"></rabbit:binding>
		</rabbit:bindings>
	</rabbit:direct-exchange>
	<rabbit:template exchange="sgExchage" id="amqpTemplate"
		connection-factory="connectionFactory" />

	<!-- 消息监听者 -->
	 <bean id="queueMqListener"
		class="pub.makers.shop.bill.service.OrderBillListener" />
	<rabbit:listener-container
		connection-factory="connectionFactory" acknowledge="auto">
		<rabbit:listener ref="queueMqListener" queues="${rabbit.queueMqTask}" />
	</rabbit:listener-container>
</beans>