<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
 
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="shop-service-admin"  />
    <dubbo:registry protocol="${registry.protocol}" address="${registry.url}" file="shop-service-admin.properties"/>
    <!-- 用dubbo协议在28050端口暴露服务 -->
    <!-- <dubbo:protocol name="dubbo" port="28050" host="192.168.1.160" /> -->
    <dubbo:protocol name="dubbo" port="${dubbo.admin.port}" host="${registry.host}" accesslog="true"/>
 	<dubbo:annotation package="pub.makers.shop" />
 	<dubbo:provider retries="0" timeout="10000" executes="100"></dubbo:provider>
 	<dubbo:monitor protocol="registry" />
</beans>